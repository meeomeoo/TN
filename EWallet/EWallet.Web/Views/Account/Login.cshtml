@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using EWallet.Data.Entities
@using Microsoft.AspNetCore.Identity

@section css{
    <link href="~/css/wallet.css" rel="stylesheet" />
}
@model EWallet.Service.ViewModels.LoginModel

<div id="wallet">
    <div class="page_heading">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <p>ĐĂNG NHẬP / ĐĂNG KÝ</p>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="box-content">
    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                @TempData["Error"]
            </div>

        }

        <div class="row">
            <div class="col-sm-4 col-sm-push-4">
                <form class="login-form" method="post">
                    <div class="form-group form-grop__icon">
                        <i class="fa icon-mail"></i>
                        <div class="remi-colorized-field has-error">
                            <input class="form-control" asp-for="@Model.Email" placeholder="Nhập email của bạn">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-primary" type="submit"><span>Tiếp tục</span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
